@model TwitterApp.Models.TweetViewModel

@{
    ViewBag.Title = "CreateTweet";
}

<h2>Create new Tweet</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>Tweet</legend>

        <div class="control-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content, null, new { @class = "help-inline" })
            </div>
        </div>
       
        <div class="control-group">
            @Html.LabelFor(model => model.TagName, "Tag", new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.TagName)
                @Html.ValidationMessageFor(model => model.TagName, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Create" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to My list", "MyTweets")
</div>

