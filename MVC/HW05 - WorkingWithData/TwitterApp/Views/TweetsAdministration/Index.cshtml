@model IEnumerable<TwitterApp.Models.Tweet>

@{
    ViewBag.Title = "Index";    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Creator.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Creator.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag.Name)
        </td>
        <td>
            <a href="@Url.Action("Details", new { item.Id })">
                @((item.Content).Length <= 50 ? item.Content : item.Content.Substring(0, 50) + "...")
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<div id="page-bar">
    @for (int i = 1; i <= ViewBag.Pages; i++)
    {
        <a href="@Url.Action("Index", new { id = i })">@i</a>
    }
</div>